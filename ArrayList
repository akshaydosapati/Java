import java.util.ArrayList;

public class Arraylist {

	public static void main(String[] args) {
		ArrayList<String> names = new ArrayList<String>(); // an arraylist of string type has been created with new
															// operator and named as names
		names.add("james"); // add method is used to add elements to the arraylist
		names.add("cameroon");
		names.add("will");

		// get method is used to return the element of a given index
		System.out.println(names.get(0));

		/*
		 * set method is used to modify the required element the set method consists 2
		 * parameters, one is for index and other one is for value
		 */
		names.set(1, "bond");
		System.out.println(names.get(1));

		// remove method used to remove the unwanted element with its index
		names.remove(2);

		// size method returns the capacity of an arraylist
		System.out.println(names.size());

		// clear method removes all the elements of arraylist
		names.clear();

	}

}
